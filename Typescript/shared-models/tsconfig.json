{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "lib": ["ES6", "DOM"],
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,      
        "strictPropertyInitialization": false,      
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "types": ["node"],
        "moduleResolution": "node",
    },
    "include": ["src/**/*.ts"]
  }
  